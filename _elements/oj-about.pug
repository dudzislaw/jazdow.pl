link(rel="import" href="../lib/bower_components/polymer/polymer.html")
link(rel="import" href="../lib/bower_components/marked-element/marked-element.html")
link(rel="import" href="oj-expander.html")

dom-module#oj-about
	// ---------------------------------------------------------------
	style
		:stylus
			@import '../_lib/css/elements.imports.styl'
			:host
				display: block
			.inner-section
				margin-top: 8rem
				+below(1100px)
					margin-top: 6rem
			oj-expander
				lost-column: 2/3 0 $gutter flex
				+below(1100px)
					lost-offset: -2/12 row $gutter
					text-align: center
					p
						font-size: 1.8rem
				+below(600px)
					display: block
					width: 100%
					lost-offset: 0 row $gutter

	// ---------------------------------------------------------------
	template
		.inner-section
			h1.section-title [[data.about_title]]
			oj-expander#about_content(reveal="0" show-text="czytaj dalej" hide-text="ukryj tekst" is-hidden="false")
				marked-element(markdown="[[data.content]]")



	// ---------------------------------------------------------------
	script
		:coffee-script
			Polymer
				is: 'oj-about'
				
				ready: ->
					return
				attached: ->
					return
				detached: ->
					return
