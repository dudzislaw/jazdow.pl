link(rel="import" href="../lib/bower_components/polymer/polymer.html")
link(rel="import" href="../lib/bower_components/marked-element/marked-element.html")
link(rel="import" href="oj-calendar.html")

dom-module#oj-layout-events
	template
		style
			:stylus
				@import '../_lib/css/elements.imports.styl'
				:host
					display: block
				.title
					lost-column: 2/3 0 $gutter flex
					display: block
					letter-spacing: .075em
					+below(1100px)
						lost-offset: -1/6 row $gutter
						text-align: center
					+below(600px)
						display: block
						width: 100%
						lost-offset: 0 row $gutter
				.info-col
					lost-column: 2/3 2 $gutter flex
					p
						lost-column: 3/4 0 $gutter flex
					+below(1100px)
						lost-column: 1/1 0 $gutter flex
						p
							lost-column: 8/12 1 $gutter flex
							lost-offset: -2/12 row flex
							text-align: center
							font-size: 1.8rem
					+below(600px)
						p
							lost-column: 1/1 0 $gutter flex
							lost-offset: 0 row flex
				.extra-col
					lost-column: 1/3 2 $gutter flex
					+below(1100px)
						display: block
						margin: 0
						width: 100%
					.calendar-illustration
						+above(1100px)
							lost-column: 2/3 0 $gutter flex
							lost-offset: -1/4 row $gutter
							img
								width: 100%
								transform: translateY(2rem)
						+below(1100px)
							width: 12rem
							margin: 0 auto
				oj-calendar
					margin: 4rem 0
					lost-column: 1/1 0 $gutter flex
					margin-bottom: 10rem
					+below(1100px)
						lost-column: 1/1 0 $gutter flex
						text-align: center
					+below(800px)
						lost-column: 1/1 0 $gutter flex
						lost-offset: 0 row flex
					
		.intro
		.info-col
			h1.title [[title]]
			marked-element(markdown="[[content]]")
				.markdown-html
		.extra-col
			.calendar-illustration
				img(src='[[image]]')

		oj-calendar(
			limit='[[params.limit]]'
			show-days='[[params.showDays]]'
			api-key='[[params.google.apikey]]'
			calendar-ids='[[params.google.calendars]]'
			labels='[[params.labels]]'
			)
		

	// ---------------------------------------------------------------
	script
		:coffee-script
			Polymer
				is: 'oj-layout-events'
				
				ready: ->
					return
				attached: ->
					return
				detached: ->
					return
