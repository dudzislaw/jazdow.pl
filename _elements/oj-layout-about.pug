link(rel="import" href="../lib/bower_components/polymer/polymer.html")
link(rel="import" href="../lib/bower_components/marked-element/marked-element.html")
link(rel="import" href="oj-expander.html")

dom-module#oj-layout-about
	// ---------------------------------------------------------------
	style
		:stylus
			@import '../_lib/css/elements.imports.styl'
			:host
				display: block
				background-color: white
				padding-top: 10rem
				+below(1100px)
					padding-top: 8rem
			.inner-section
				lost-center: $grid-width 1rem flex
				clearfix()
				+below(1100px)
					padding: 0 1rem
			.title
				lost-column: 2/3 0 $gutter flex
				display: block
				letter-spacing: .075em
				+below(1100px)
					lost-offset: -1/6 row $gutter
					text-align: center
				+below(600px)
					display: block
					width: 100%
					lost-offset: 0 row $gutter
			oj-expander
				lost-column: 2/3 0 $gutter flex
				+below(1100px)
					lost-offset: -2/12 row $gutter
					text-align: center
					p
						font-size: 1.8rem
				+below(600px)
					display: block
					width: 100%
					lost-offset: 0 row $gutter

	// ---------------------------------------------------------------
	template
		.inner-section
			h1.title [[title]]
			oj-expander#about_content(reveal="0" show-text="czytaj dalej" hide-text="ukryj tekst" is-hidden="false")
				marked-element(markdown="[[content]]")



	// ---------------------------------------------------------------
	script
		:coffee-script
			Polymer
				is: 'oj-layout-about'
				
				ready: ->
					return
				attached: ->
					return
				detached: ->
					return
