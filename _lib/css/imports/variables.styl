// GENERAL PRUPOSE VARIABLES
/////////////////////////////////////////////

// GRID
$grid-width = 1312px

// BREAKPOINTS
$mobile-v = 400
$mobile-h = 600
$tablet-v = 800
$tablet-h = 1050

// COLORS
$blue = blue


// FONTS
$M1 = 'M1', 'Helvetica Neue', Helvetica, Arial, sans-serif

// IMAGES
$map-marker-svg = url('../ui/map-marker.svg')

// EASINGS
$easeInOutCirc= cubic-bezier(0.785, 0.135, 0.15, 0.86)






// GENERIC HTML STYLES
/////////////////////////////////////////////

// BASE FONT
$base_font_family= $M1

// BASE SIZES
$base_font_size= 20px
$base_line_height= $base_font_size * 1.5
$base_weight= 400

// BASE COLORS
$base_font_color= black
$base_link_color= blue
$base_hover_color= blue

// LISTS
$list_margin1= 0 0 1em 3em
$list_margin2= 0 0 1em 2em

// TABLES
$table_border_color= #CBCBCB

// PRE
$pre_margin= 2em 0 2em 2em
$pre_padding= 1em
$pre_bg= #CBCBCB

// ABR and ACRONYM
$abbr_border= 1px dotted black

//FORM
$form_text_color=           black
$form_border_color=         #CBCBCB
$form_border_color_hover=   rgba($form_border_color, .5)
$form_border_color_focus=   rgba($form_border_color, .5)
$form_box_shadow=           rgba(black, .1) 0px 1px 2px 0px inset
$form_box_shadow_focus=     none
$form_border_radius=        3px
$form_font_family=          $base_font_family
$form_font_weight=           400


