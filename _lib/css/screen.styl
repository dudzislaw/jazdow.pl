@import 'nib'
global-reset()
@import 'imports/*'
@import 'imports/**/*'

@lost gutter 2em
@lost flexbox flex

html
	font-size: 16px
body
	// lost-utility: edit
	// grid-guide(12, $gutter/2, $grid-width, 1rem)
*
	box-sizing: border-box

section.bg
	z-index: -100
	position: fixed
	top: 0
	width: 100%
	height: auto

section.full
	width: 100%
	background-color: white
	clearfix()

body.video-bg
	section#main-menu-container
		margin-top: 56.15vw
		background-color: white

.inner-section
	lost-center: $grid-width 1rem flex
	clearfix()
	&.home-about
		margin-top: 8rem
	&.home-cards
		margin-top: 8rem
	&.home-events
		margin-top: 16rem
	&.timeline
		margin-top: 8rem



// VIDEO LAYER
#big-logo
	display: block
	position: absolute
	top: 10rem
	text-align: center
	z-index: 10
	&:before
		content: 'f'
		icon()
		display: block
		font-size: 14rem
	&:after
		content: 'g'
		icon()
		display: block
		font-size: 9rem
		margin-top: 75%



// HOME CARDS
.card
	lost-column: 1/3 3 $gutter flex
	display: flex
	flex-direction: column
	justify-content: space-between
	padding: 0.8rem 1.25rem 1.25rem 1.25rem
	color: $oj-violet
	background-color: $oj-pink
	.card-title
		padding-bottom: .5rem
		margin-bottom: 1rem
	.card-content
		font-family: P
		font-weight: 700
		font-size: 2.5rem
		margin-bottom: 2rem
	.card-caption
		font-size: 1.2rem
		line-height 1.5em
		letter-spacing 0.04em
		margin-bottom: 1rem




// MINI CALENDAR
.calendar-info-col
	lost-column: 2/3 2 $gutter flex
	p
		lost-column: 3/4 0 $gutter flex

.extra-col
	lost-column: 1/3 2 $gutter flex
	.calendar-illustration
		lost-column: 2/3 0 $gutter flex
		lost-move: 1/4 row $gutter
		img
			width: 100%
			transform: translateY(6rem)

.calendar-col
	lost-column: 3/4 0 $gutter flex
	margin-bottom: 10rem



// HISTORY TIMELINE
.timeline-intro
	lost-column: 3/4 0 $gutter
	margin-bottom: 8rem
#timeline
	.timeline-event
		display: flex
		lost-column: 8/12 0 $gutter
		.timeline-event-date
			lost-column: 2/8 2 $gutter
			position: relative
			padding-right: $gutter
			border-right: .5rem solid $oj-green
			text-align: right
			color: $oj-violet
			@extend .card-title
			font-size: 1.2rem
			&:after
				content: ''
				display: block
				position: absolute
				top: -.25rem
				right: -1rem
				z-index: 2
				size: 1rem
				border: .25rem solid $oj-violet
				border-radius: 50%
				background-color: white
				box-shadow: 0 2px 5px rgba($oj-violet, .5)
		.timeline-event-content
			lost-column: 6/8 2 $gutter
			margin-bottom: 3rem
			position: relative
			h4
				@extend .card-title
				font-size: 1.2rem
				margin-bottom: .5rem
			p
				font-size: 1.2rem
				letter-spacing: 0
				line-height: 1.5em


// FOOTER
footer#page-footer
	width: 100%
	clearfix()
	display: block
	padding: 6.5rem 0 0 0
	background-image: url('/assets/images/jazdow-pw.png')
	background-position: right bottom
	background-repeat: no-repeat
	background-color: $oj-light
	.inner-section.page-footer
		display: block
	.contacts
		clearfix()
		display: block
		float: left
		margin-bottom: 10rem
		.contact
			display: block
			float: left
			margin-right: 2*$gutter
			.contact-title
				@extend .card-title
			.contact-details
				p
					font-size: 1.2rem
					line-height 1.5em
					letter-spacing 0.04em
					margin-bottom: 1rem
	.social
		display: block
		float: right
		clearfix()
		.social-icon
			icon()
			display: block
			size: 2rem
			float: right
			color: $oj-violet
			font-size: 2rem
			text-align: right
			margin-left: $gutter
			&#facebook:after
				content: 'a'
			&#google:after
				content: 'b'
			&#instagram:after
				content: 'd'



// POLYMER ELEMENTS
oj-menu
	display: block
	position: relative
	z-index: 9
	padding: 1.5rem 2rem
	margin: 0 auto
	background-color: white
	clearfix()
	&.trapped.top
		background-color: rgba(white, .95)
		box-shadow: 0 1px 5px rgba(black, .15)

oj-expander
	lost-column: 2/3 2 $gutter flex

oj-calendar
	width: 100%
	margin: 4rem 0
